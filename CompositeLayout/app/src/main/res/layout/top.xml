<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="30px"
    android:layout_gravity="top"
    android:background="@drawable/top_bg"
    android:gravity="top" >

    <TextView
        android:id="@+id/topTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="5px"
        android:shadowColor="#999999"
        android:shadowRadius="1"
        android:text="자앤 소개"
        android:textColor="#000000"
        android:textSize="14px"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/loadingTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Loading..."
        android:textSize="12dp"
        android:visibility="invisible" >
    </TextView>

    <LinearLayout
        android:id="@+id/topBtnLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/mailImgBut"
            android:layout_width="16px"
            android:layout_height="18px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="5px"
            android:background="@android:drawable/ic_dialog_email"
            android:gravity="center" />

        <ImageView
            android:id="@+id/gallImgBut"
            android:layout_width="16px"
            android:layout_height="17px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="5px"
            android:background="@android:drawable/ic_menu_gallery" />

        <ImageButton
            android:id="@+id/uplaodImgBut"
            android:layout_width="24px"
            android:layout_height="24px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:background="@android:drawable/ic_menu_upload" />

        <ImageButton
            android:id="@+id/shareImgBut"
            android:layout_width="24px"
            android:layout_height="24px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:background="@android:drawable/ic_menu_share" />
    </LinearLayout>

</RelativeLayout>